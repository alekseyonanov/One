<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/include_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/runTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Бег"
        android:textColor="#4a4e51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <com.google.android.material.progressindicator.ProgressIndicator
        android:id="@+id/runProgressBar"
        style="@style/Widget.MaterialComponents.ProgressIndicator.Linear.Determinate"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:indeterminateOnly="false"
        android:max="100"
        android:progress="45"
        app:indicatorColor="@color/colorAccent"
        app:indicatorCornerRadius="6dp"
        app:indicatorWidth="12dp"
        app:layout_constraintTop_toBottomOf="@id/runTitle" />

    <TextView
        android:id="@+id/pushUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Анжумания"
        android:textColor="#4a4e51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/runProgressBar" />

    <com.google.android.material.progressindicator.ProgressIndicator
        android:id="@+id/pushUpProgressBar"
        style="@style/Widget.MaterialComponents.ProgressIndicator.Linear.Determinate"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:indeterminateOnly="false"
        android:max="100"
        android:progress="55"
        app:indicatorColor="#2979FF"
        app:indicatorCornerRadius="6dp"
        app:indicatorWidth="12dp"
        app:layout_constraintTop_toBottomOf="@id/pushUpTitle" />

    <TextView
        android:id="@+id/squatTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Приседания"
        android:textColor="#4a4e51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pushUpProgressBar" />

    <com.google.android.material.progressindicator.ProgressIndicator
        android:id="@+id/SquatProgressBar"
        style="@style/Widget.MaterialComponents.ProgressIndicator.Linear.Determinate"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:indeterminateOnly="false"
        android:max="100"
        android:progress="65"
        app:indicatorColor="#00E676"
        app:indicatorCornerRadius="6dp"
        app:indicatorWidth="12dp"
        app:layout_constraintTop_toBottomOf="@id/squatTitle" />

    <TextView
        android:id="@+id/absTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Пресс"
        android:textColor="#4a4e51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SquatProgressBar" />

    <com.google.android.material.progressindicator.ProgressIndicator
        android:id="@+id/absProgressBar"
        style="@style/Widget.MaterialComponents.ProgressIndicator.Linear.Determinate"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:indeterminateOnly="false"
        android:max="100"
        android:progress="75"
        app:indicatorColor="#FF1744"
        app:indicatorCornerRadius="6dp"
        app:indicatorWidth="12dp"
        app:layout_constraintTop_toBottomOf="@id/absTitle" />

    <TextView
        android:id="@+id/runResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="12"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/pushUpResult"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/absProgressBar" />

    <TextView
        android:id="@+id/pushUpResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="12"
        android:textColor="#2979FF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/squatResult"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/runResult"
        app:layout_constraintTop_toBottomOf="@id/absProgressBar" />

    <TextView
        android:id="@+id/squatResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="12"
        android:textColor="#00E676"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/absResult"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/pushUpResult"
        app:layout_constraintTop_toBottomOf="@id/absProgressBar" />

    <TextView
        android:id="@+id/absResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="12"
        android:textColor="#FF1744"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/squatResult"
        app:layout_constraintTop_toBottomOf="@id/absProgressBar" />

    <TextView
        android:id="@+id/runUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="км"
        android:textColor="#4a4e51"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/runResult"
        app:layout_constraintStart_toStartOf="@id/runResult"
        app:layout_constraintTop_toBottomOf="@id/runResult" />

    <TextView
        android:id="@+id/pushUpUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="раз"
        android:textColor="#4a4e51"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/pushUpResult"
        app:layout_constraintStart_toStartOf="@id/pushUpResult"
        app:layout_constraintTop_toBottomOf="@id/pushUpResult" />

    <TextView
        android:id="@+id/squatUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="раз"
        android:textColor="#4a4e51"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/squatResult"
        app:layout_constraintStart_toStartOf="@id/squatResult"
        app:layout_constraintTop_toBottomOf="@id/squatResult" />


    <TextView
        android:id="@+id/absUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="раз"
        android:textColor="#4a4e51"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/absResult"
        app:layout_constraintStart_toStartOf="@id/absResult"
        app:layout_constraintTop_toBottomOf="@id/absResult" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>